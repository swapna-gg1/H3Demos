  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug (LLDB)",
      "stopOnEntry": false,
      "program": "${workspaceFolder}/build/mgsws_graphics_project.exe",
      "args": [],
      "cwd": "${workspaceFolder}/src",
      "preLaunchTask": "make"
    },
    {
      "name": "Debug (GDB)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "make",
      "program": "${workspaceFolder}/build/mgsws_graphics_project.exe",
      "args": [],
      "cwd": "${workspaceFolder}/src",
      "stopAtEntry": false,
      "environment": [],
      "externalConsole": true,
      "avoidWindowsConsoleRedirection": true,
      "filterStdout": false,
      "MIMode": "gdb",
      "miDebuggerPath": "${userHome}/AppData/Roaming/com.microchip.mgsws/sdk/emsdk/mingw/7.1.0_64bit/bin/gdb.exe"
    }
  ]
}
